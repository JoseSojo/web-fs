
<div class="container">
  <div class="row">
    <div class="col-md-6 card bg-dark m-auto">
      <div class="card-header text-center text-light">
        <h3>{{name}}</h3>
      </div>
      <div class="card-body">
        <form action="/login" method="post" autocomplete="off">
          <div class="container-fluid">
            <div class="row">
              {{#each inputs}}
                <div class="col-12 m-auto">
                  <label for="{{id}}">{{label}}</label>
                  <input type="{{type}}" id='{{id}}' name="{{name}}" placeholder="{{label}}" class='fs-form-input'>
                </div>
              {{/each}}
              <input type="submit" class='btn btn-lg btn-block fs-btn-primary' value="Send">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
