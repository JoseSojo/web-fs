
<div class="container">
  <div class="row">
    <!--  -->
    <div class="card col-12 m-auto bg-dark">
      <div class="card-body">
        <div class="container-fluid">
          <div class="row">
            <!--  -->
            <div class="card col-lg-6 bg-dark">
              <div class="card-body">
                <img src="/img/personage.jpg" class='text-danger card-img-top' alt="Personage Fantasy Story">
              </div>
            </div>
            <!--  -->
            <div class="card col-lg-6 bg-dark p-0">
              <div class="card-body">
                <table class='table table-dark table-bordered table-striped'>
                  <thead>
                    <tr>
                      <td colspan="2" class="text-center">
                        <strong>Data Gammer</strong>
                      </td>
                      <td class='text-center'>
                        {{#validPointsColor user.fs_game_point}}
                          {{this}}
                        {{/validPointsColor}}
                    </td>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each dataGammer}}
                    <tr class="text-center">
                      <td><strong>{{title}}</strong></td>
                      <td class="lead" stast-name='{{name}}'>{{value}}</td>
                      <td class="lead"><button class="fs_game_point-{{name}} btn btn-lg text-success bi-caret-up-fill" stast-camp='{{name}}' stast-id={{user_id}}></button></td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--  -->
  </div>
</div>
